<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animationCache="true"
    tools:context=".SignUp">

    <EditText
        android:id="@+id/edtName"
        android:layout_width="0dp"
        android:layout_height="68dp"
        android:ems="10"
        android:hint="Please enter name"
        android:inputType="textPersonName"
        app:layout_constrainedWidth="false"
        tools:layout_editor_absoluteX="2dp"
        tools:layout_editor_absoluteY="6dp" />

    <EditText
        android:id="@+id/edtKp"
        android:layout_width="389dp"
        android:layout_height="57dp"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:hint="Kick power"
        android:inputType="textPersonName"
        app:layout_constraintTop_toBottomOf="@+id/edtPs"
        tools:layout_editor_absoluteX="2dp" />


    <Button
        android:id="@+id/btnsave"
        android:layout_width="0dp"
        android:layout_height="58dp"
        android:layout_marginTop="92dp"
        android:hint="Save in Database"
        app:layout_constraintTop_toBottomOf="@+id/edtKs"
        tools:layout_editor_absoluteX="139dp" />


    <EditText
        android:id="@+id/edtKs"
        android:layout_width="395dp"
        android:layout_height="53dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="Kick speed"
        android:inputType="textPersonName"
        app:layout_constraintTop_toBottomOf="@+id/edtKp"
        tools:layout_editor_absoluteX="5dp" />


    <EditText
        android:id="@+id/edtPs"
        android:layout_width="394dp"
        android:layout_height="50dp"
        android:layout_marginTop="64dp"
        android:ems="10"
        android:hint="punch speed"
        android:inputType="textPersonName"
        app:layout_constraintTop_toBottomOf="@+id/edtPp"
        tools:layout_editor_absoluteX="2dp" />

    <EditText
        android:id="@+id/edtPp"
        android:layout_width="401dp"
        android:layout_height="57dp"
        android:layout_marginTop="48dp"
        android:ems="10"
        android:hint="punch power"
        android:inputType="textPersonName"
        app:layout_constraintTop_toBottomOf="@+id/edtName"
        tools:layout_editor_absoluteX="2dp" />

</androidx.constraintlayout.widget.ConstraintLayout>